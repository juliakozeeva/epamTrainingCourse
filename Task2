using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Mod1_Lab2
{
    class Program
    {
        static void Main(string[] args)
        {
            int[] array = {1, 5, 9, 10, 18, 27, 34 };
            SearchArray(array);
            Console.ReadLine();
        }

        static void SearchArray(int[] array)
        {
            Console.Write("Enter the number: ");
            int num = Convert.ToInt32(Console.ReadLine());
            if (array.Contains(num))
            {
                Console.WriteLine("Array includes " + num);
            }
            else
            {
                Console.WriteLine("Number is not defined");
            }
        }
    }
}
